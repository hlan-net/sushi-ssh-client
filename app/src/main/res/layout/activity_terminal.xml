<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sushi_terminal_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/terminalStatusText"
        style="@style/TextAppearance.Sushi.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terminal_status_disconnected"
        android:textColor="@color/sushi_white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/terminalConnectButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/action_start_session" />

    <net.hlan.sushi.TerminalView
        android:id="@+id/terminalOutputText"
        style="@style/TextAppearance.Sushi.Body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:text="@string/session_log_placeholder"
        android:textColor="@color/sushi_white" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/terminalLiveInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/terminal_live_input_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/terminalLiveInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSend"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/sushi_white" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminalEnterButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_send_enter" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminalTabButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_send_tab" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminalBackspaceButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_send_backspace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminalCtrlCButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_send_ctrl_c"
            android:textColor="?attr/colorError" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/terminalCtrlDButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_send_ctrl_d" />
    </LinearLayout>

</LinearLayout>
