<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sushi_mist"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/settingsTitle"
            style="@style/TextAppearance.Sushi.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title" />

        <TextView
            android:id="@+id/settingsSubtitle"
            style="@style/TextAppearance.Sushi.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/settings_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsTabGeneral"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_tab_general" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsTabGemini"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/settings_tab_gemini" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsTabDrive"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/settings_tab_drive" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsGeneralSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/languageSectionTitle"
                style="@style/TextAppearance.Sushi.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/language_section_title" />

            <TextView
                android:id="@+id/languageSectionSubtitle"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/language_section_subtitle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/languageLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/language_label">

                <AutoCompleteTextView
                    android:id="@+id/languageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/sshSectionTitle"
                style="@style/TextAppearance.Sushi.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ssh_section_title" />

            <TextView
                android:id="@+id/sshSectionSubtitle"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/ssh_section_subtitle" />

            <TextView
                android:id="@+id/managementSectionTitle"
                style="@style/TextAppearance.Sushi.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_management_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manageHostsButton"
                style="@style/Widget.Sushi.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_hosts" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manageKeysButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_keys_short" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/managePlaysButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_plays_short" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/managePhrasesButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_phrases_short" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsGeminiSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/geminiSectionTitle"
                style="@style/TextAppearance.Sushi.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gemini_settings_section_title" />

            <TextView
                android:id="@+id/settingsGeminiSubtitle"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/gemini_settings_subtitle" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/geminiEnabledSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/gemini_settings_toggle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/apiKeyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/gemini_api_key_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apiKeyInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/apiKeyHelper"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/gemini_api_key_helper" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsDriveSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/driveSectionTitle"
                style="@style/TextAppearance.Sushi.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drive_section_title" />

            <TextView
                android:id="@+id/driveSectionSubtitle"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/drive_section_subtitle" />

            <TextView
                android:id="@+id/driveStatusText"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/drive_status_signed_out" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/driveSignInButton"
                style="@style/Widget.Sushi.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/action_drive_sign_in" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/driveSignOutButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/action_drive_sign_out"
                android:visibility="gone" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/driveAlwaysSaveSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/drive_always_save_toggle" />

            <TextView
                android:id="@+id/driveAlwaysSaveHelper"
                style="@style/TextAppearance.Sushi.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/drive_always_save_helper" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Widget.Sushi.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/action_save_settings" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aboutButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/action_about" />

    </LinearLayout>
</ScrollView>
